<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".fragments.YourInfoFragment">

    <!-- TODO: Update blank fragment layout -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <Spinner

        android:id="@+id/spnInvestFor"
        android:spinnerMode="dropdown"
        android:dropDownWidth="match_parent"
        android:layout_width="match_parent"

        android:layout_height="match_parent"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="60dp">

        <EditText
            android:textColor="#000"
            android:id="@+id/etInvestmentFor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Who is this investment for?*"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="false"
            android:editable="false"
            android:singleLine="true"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>
    <TextView
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:text="Is the equity one time or recurring?"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/tvfixedLabel"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="Fixed "
            android:textColor="#000"

            android:layout_height="wrap_content" />

        <Switch
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_toRightOf="@id/tvfixedLabel"
            android:id="@+id/switchFixedVariable"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvVaribleLabel"
            android:layout_toRightOf="@id/switchFixedVariable"

            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:textColor="#000"

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:text="Variable"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="50dp">

        <EditText
            android:textColor="#000"
            android:id="@+id/etDateOfPurchase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Date of purchase"
            android:inputType="number"
            android:padding="12dp"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"
            android:singleLine="true"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"

        android:layout_height="60dp">

        <EditText
            android:textColor="#000"
            android:id="@+id/etNumberOfUnits"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Number of units"
            android:inputType="number"
            android:paddingLeft="12dp"
            android:singleLine="true"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_acc_code"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"

        android:layout_height="50dp">

        <EditText
            android:textColor="#000"
            android:id="@+id/etPurchasePrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Purchase price"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Add more"
        android:gravity="center"
        android:textColor="#fff"
        android:background="@drawable/red_button_background"
        android:id="@+id/btnAddMore"
        android:layout_width="150dp"
        android:layout_height="50dp" />

</LinearLayout>